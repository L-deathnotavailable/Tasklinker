{% extends 'base.html.twig' %}

{% block body %}
    <div id="projects-container">
        {% for project in projects %}
            <article class="card-project">
                <a href="{{ path('project_show', {'id': project.id}) }}">
                    <h2>{{ project.name }}</h2>
                </a>
                <div class="card-project-icons">
                    <a href="{{ path('project_edit', {'id': project.id}) }}">
                        <i class="fa-solid fa-pen"></i>
                    </a>
                    <a href="{{ path('project_delete', {'id': project.id}) }}">
                        <i class="fa-solid fa-trash"></i>
                    </a>
                </div>
            </article>
        {% endfor %}
            <article class="card-project">
                {# <a href="{{ path('project_add') }}"> #}
                <a href="#">
                <i class="fa-solid fa-circle-plus add-project-icon"></i>
                <h2>Ajouter un projet</h2>
                </a>
            </article>
    </div>
{% endblock %}
